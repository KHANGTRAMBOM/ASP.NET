@model DoAnASP.Models.Album

@{
    ViewData["Title"] = "Create Album";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Tạo New Album</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="ArtistID" class="form-label"></label>
                            <select asp-for="ArtistID" class="form-select" asp-items="ViewBag.ArtistID">
                                <option value="">-- Chọn nghệ sĩ --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CoverArt" class="form-label"></label>
                            <div class="input-group">
                                <input name="Image" type="file" class="form-control" id="Image" accept=".jpg,.jpeg,.png">
                                <input asp-for="CoverArt" type="hidden" value="abc" />
                            </div>
                            <span asp-validation-for="CoverArt" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReleaseDate" class="form-label"></label>
                            <input asp-for="ReleaseDate" class="form-control" type="date" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GenreID" class="form-label"></label>
                            <select asp-for="GenreID" class="form-select" asp-items="ViewBag.GenreID">
                                <option value="">-- Chọn thể loại --</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Trở về trang chủ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Tạo 
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div style="height: 50px">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}