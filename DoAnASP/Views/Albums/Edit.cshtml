@model DoAnASP.Models.Album

@{
    ViewData["Title"] = "Edit Album";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Chỉnh sửa Album</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="AlbumID" />

                        <div class="mb-3">
                            <label asp-for="ArtistID" class="form-label"></label>
                            <select asp-for="ArtistID" class="form-select" asp-items="ViewBag.ArtistID">
                                <option value="">-- Select Artist --</option>
                            </select>
                            <span asp-validation-for="ArtistID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CoverArt" class="form-label"></label>
                            <input name="Image" type="file" class="form-control" id="Image" accept=".jpg,.jpeg,.png">
                            <input asp-for="CoverArt" type="hidden" value="@Model.CoverArt" />
                            <span asp-validation-for="CoverArt" class="text-danger"></span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.CoverArt))
                        {
                            <div class="mb-4">
                                <div class="card shadow-sm">
                                    <div class="card-header bg-secondary text-white">
                                        <h6 class="mb-0">Cover Art Hiện Tại</h6>
                                    </div>
                                    <div class="card-body text-center">
                                        <img src="/coverarts/@Model.CoverArt"
                                             alt="Current Cover Art"
                                             class="img-fluid rounded"
                                             style="max-height: 200px; object-fit: cover;" />
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="ReleaseDate" class="form-label"></label>
                            <input asp-for="ReleaseDate" class="form-control" type="date" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GenreID" class="form-label"></label>
                            <select asp-for="GenreID" class="form-select" asp-items="ViewBag.GenreID">
                                <option value="">-- Select Genre --</option>
                            </select>
                            <span asp-validation-for="GenreID" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Trở về trang chủ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div style="height: 30px">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}