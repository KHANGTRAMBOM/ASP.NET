@model DoAnASP.Models.PlaylistSong

@{
    ViewData["Title"] = "Edit Playlist Song";
}
<link rel="stylesheet" href="~/css/Playlistsong/custom-styles -details.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<div class="container py-5 bg-gradient">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 playlist-song-card">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-pencil-square me-2 fs-4"></i>
                        <h2 class="card-title mb-0">Chỉnh sửa Bài Hát & Playlist</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-route-playlistId="@Model.PlaylistID" asp-route-songId="@Model.SongID">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="PlaylistID" />
                        <input type="hidden" asp-for="SongID" />

                        <div class="mb-4">
                            <label asp-for="Position" class="form-label text-muted fw-bold">Vị trí</label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AddedAt" class="form-label text-muted fw-bold">Ngày thêm</label>
                            <input asp-for="AddedAt" class="form-control" type="datetime-local" />
                            <span asp-validation-for="AddedAt" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary d-flex align-items-center justify-content-center">
                                <i class="bi bi-check-circle me-2"></i>
                                <span>Lưu thay đổi</span>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
                                <i class="bi bi-arrow-left me-2"></i>
                                <span>Trở về trang chủ</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
