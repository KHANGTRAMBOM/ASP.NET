@model DoAnASP.Models.PlaylistSong

@{
    ViewData["Title"] = "Chi tiết bài hát thuộc Playlist";
}

<link rel="stylesheet" href="~/css/Playlistsong/custom-styles.css">

<div class="container-fluid py-5 bg-gradient">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 playlist-song-card">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-music-note-list me-2 fs-4"></i>
                        <h2 class="card-title mb-0">@ViewData["Title"]</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="info-group">
                        <div class="info-item">
                            <div class="d-flex align-items-center mb-4">
                                <i class="bi bi-hash text-primary me-3 fs-4"></i>
                                <div>
                                    <label class="text-muted small">@Html.DisplayNameFor(model => model.Position)</label>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.Position)</p>
                                </div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="d-flex align-items-center mb-4">
                                <i class="bi bi-calendar-plus text-primary me-3 fs-4"></i>
                                <div>
                                    <label class="text-muted small">@Html.DisplayNameFor(model => model.AddedAt)</label>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.AddedAt)</p>
                                </div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="d-flex align-items-center mb-4">
                                <i class="bi bi-collection-play text-primary me-3 fs-4"></i>
                                <div>
                                    <label class="text-muted small">@Html.DisplayNameFor(model => model.Playlist)</label>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.Playlist.Title)</p>
                                </div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="d-flex align-items-center mb-4">
                                <i class="bi bi-music-note-beamed text-primary me-3 fs-4"></i>
                                <div>
                                    <label class="text-muted small">@Html.DisplayNameFor(model => model.Song)</label>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.Song.Title)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light py-3">
                    <div class="d-grid gap-3">
                        <a asp-action="Edit"
                           asp-route-playlistId="@Model.PlaylistID"
                           asp-route-songId="@Model.SongID"
                           class="btn btn-primary d-flex align-items-center justify-content-center">
                            <i class="bi bi-pencil me-2"></i>
                            <span>Chỉnh sửa</span>
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
                            <i class="bi bi-arrow-left me-2"></i>
                            <span>Trở về trang chủ</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


