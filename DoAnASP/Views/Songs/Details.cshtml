@model DoAnASP.Models.Song

@{
    ViewData["Title"] = "Chi tiết bài hát";
}

<div class="container mt-5 ">
    <div class="row" >
        <div class="col-md-4 mb-4">
            <img src="/pictures/@Html.DisplayFor(model => model.Image)"
                 class="img-fluid rounded shadow"
                 alt="@Model.Title"
                 style="width: 100%; height: 300px; object-fit: cover;" />
        </div>
        <div class="col-md-8">
            <h1 class="mb-4 text-white">@Html.DisplayFor(model => model.Title)</h1>
            <p class="lead text-dark">
                <strong class="text-white">Nghệ sĩ: @Html.DisplayFor(model => model.Artist.Name)</strong>
            </p>
            <p class="text-dark">
                <strong class="text-white">Album:  @Html.DisplayFor(model => model.Album.Title)</strong>
            </p>
            <p class="text-dark">
                <strong class="text-white">Thể loại: @Html.DisplayFor(model => model.Genre.Name)</strong>
            </p>
            <div class="mt-4">
                <audio controls class="w-100">
                    <source src="~/audios/@Model.AudioFile" type="audio/mpeg">
                    Trình duyệt của bạn không hỗ trợ phát audio.
                </audio>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Thông tin chi tiết</h5>
                    <table class="table custom-table">
                        <tbody>
                            <tr>
                                <th style="width: 30%;">Thời lượng:</th>
                                <td >@Html.DisplayFor(model => model.Duration)</td>
                            </tr>
                            <tr>
                                <th>Lượt nghe:</th>
                                <td>@Html.DisplayFor(model => model.PlayCount)</td>
                            </tr>
                            <tr>
                                <th>Nội dung nhạy cảm:</th>
                                <td>@(Model.IsExplicit ? "Có" : "Không")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model?.SongID">
            <i class="bi bi-pencil"></i> Chỉnh Sửa
        </a>
        <a class="btn btn-primary" asp-action="Index">
            <i class="bi bi-house"></i> Trở về trang chủ
        </a>
    </div>
</div>

<div style="height: 50px">
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .container{
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    h1 {
        color: #333;
        font-weight: bold;
    }

    .custom-table th {
        background-color: #f8f9fa;
    }

    .custom-table td, .custom-table th {
        padding: 12px 15px;
    }
</style>