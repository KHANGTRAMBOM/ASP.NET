@model DoAnASP.Models.Genre

@{
    ViewData["Title"] = "Chi Tiết Thể Loại";
}

<link rel="stylesheet" href="~/css/Gerne/custom-styles.css">

<div class="container-fluid py-5 bg-gradient">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 genre-card">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-music-note-list me-2 fs-4"></i>
                        <h2 class="card-title mb-0">@ViewData["Title"]</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="info-group">
                        <div class="info-item">
                            <div class="d-flex align-items-center mb-4">
                                <i class="bi bi-tag-fill text-primary me-3 fs-4"></i>
                                <div>
                                    <label class="text-muted small">@Html.DisplayNameFor(model => model.Name)</label>
                                    <p class="mb-0 fw-bold fs-4">@Html.DisplayFor(model => model.Name)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light py-3">
                    <div class="d-grid gap-3">
                        <a asp-action="Edit"
                           asp-route-id="@Model?.GenreID"
                           class="btn btn-primary d-flex align-items-center justify-content-center">
                            <i class="bi bi-pencil me-2"></i>
                            <span>Chỉnh sửa</span>
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
                            <i class="bi bi-arrow-left me-2"></i>
                            <span>Trở về trang chủ</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Add Bootstrap Icons CSS in your layout or this page -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">