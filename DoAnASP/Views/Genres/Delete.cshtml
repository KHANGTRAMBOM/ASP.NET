@model DoAnASP.Models.Genre

@{
    ViewData["Title"] = "Xóa Thể Loại";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/Gerne/custom-styles -delete.css">


<div class="container-fluid py-5 bg-gradient">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 genre-card">
                <div class="card-header bg-gradient-danger text-white py-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-trash me-2 fs-4"></i>
                        <h2 class="card-title mb-0">@ViewData["Title"]</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa thể loại này không? Hành động này không thể hoàn tác.
                    </div>
                    <div class="info-group">
                        <div class="info-item">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-tag text-danger me-3 fs-4"></i>
                                <div>
                                    <label class="text-muted small">@Html.DisplayNameFor(model => model.Name)</label>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.Name)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="GenreID" />
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-danger d-flex align-items-center justify-content-center">
                                <i class="bi bi-trash me-2"></i>Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
                                <i class="bi bi-x-circle me-2"></i>Hủy và trở về trang chủ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<style>

    .card-header.bg-gradient-danger.text-white.py-3 {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    }
</style>
