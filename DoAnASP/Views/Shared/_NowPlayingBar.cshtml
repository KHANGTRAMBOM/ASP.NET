@model SongsAndAlbumsViewModel
@using DoAnASP.Controllers

<!-- Now Playing Bar -->
<div class="now-playing-bar">
    <div class="now-playing-left">
        <div class="current-track">
            <img src="/pictures/logo.png" alt="Current track" class="track-image" id="nowPlayingImage" />
            <div class="track-info">
                <div class="track-name" id="nowPlayingTitle">Chọn bài hát</div>
                <div class="track-artist" id="nowPlayingArtist">Chọn nghệ sĩ</div>
                <div class="track-album" id="nowPlayingAlbum"></div>
                <div class="track-genre" id="nowPlayingGenre"></div>
                <div class="track-duration" id="nowPlayingDuration"></div>
                <span id="explicitBadge" style="display: none;">Explicit</span>
            </div>

        </div>
    </div>


    <div class="player-controls">
        <div class="playback-controls">
            <button class="control-button" onclick="alert('Chức năng này đang được hoàn thiện! ❤️❤️❤️❤️❤️❤️❤️')">
                <i class="bi bi-shuffle"></i>
            </button>
            <button class="control-button" id="prevButton">
                <i class="bi bi-skip-start-fill"></i>
            </button>
            <button class="play-pause-button" id="playPauseButton" aria-label="Play/Pause">
                <i class="bi bi-play-fill" aria-hidden="true"></i>
            </button>
            <button class="control-button" id="nextButton">
                <i class="bi bi-skip-end-fill"></i>
            </button>
            <button class="control-button" onclick="alert('Chức năng này đang được hoàn thiện! ❤️❤️❤️❤️❤️❤️❤️')">
                <i class="bi bi-repeat"></i>
            </button>
        </div>
        <div class="progress-container">
            <span id="currentTime">0:00</span>
            <div class="progress-bar">
                <div class="progress" id="progressBar" style="width: 0%"></div>
            </div>
            <span id="duration">0:00</span>
        </div>
    </div>

    <div class="now-playing-right">
        <button class="control-button" onclick="alert('Chức năng này đang được hoàn thiện! ❤️❤️❤️❤️❤️❤️❤️')">
            <i class="bi bi-mic"></i>
        </button>
        <button class="control-button" onclick="alert('Chức năng này đang được hoàn thiện! ❤️❤️❤️❤️❤️❤️❤️')">
            <i class="bi bi-music-note-list"></i>
        </button>
        <button class="control-button volume-icon">
            <i class="bi bi-volume-up"></i>
        </button>
        <div class="volume-control">
            <input type="range" class="volume-slider" min="0" max="100" value="100">
        </div>
    </div>
</div>

<audio id="audioPlayer"></audio>




